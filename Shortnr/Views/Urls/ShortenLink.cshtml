@model Shortnr.Commons.DTO.Input.OriginalUrlInputDTO
@{
    ViewData["Title"] = "Shorten URL";
}

<h1>@ViewData["Title"]</h1>

<div class="text-danger" asp-validation-summary="All"></div>

<form asp-action="ShortenLink" method="post">
    <div class="form-row">
        <div class="form-group col-8">
            <label asp-for="OriginalUrl">Original URL</label>
            <input asp-for="OriginalUrl" type="url" class="form-control" id="originalUrl" aria-describedby="originalUrlHelp" placeholder="http://www.originalurl.com" />
            <small id="originalUrlHelp" class="form-text text-muted">This is the original URL that you want to shorten.</small>
        </div>
        <div class="form-group col-4">
            <label asp-for="Expiration">Link Expiration</label>
            <select asp-for="Expiration" class="form-control" id="expiration">
                <option value="1" selected>One Week</option>
                <option value="2">One Month</option>
                <option value="3">One Year</option>
                <option value="4">Never</option>
            </select>
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Shorten it!</button>
</form>

@section Scripts{ 
    @await  Html.PartialAsync("_ValidationScriptsPartial")
}